<h1 class="display-4">Pizzas</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Pizza name</th>
            <th>Description of Pizza</th>
            <th>Manifacturer</th>
            <th>Founding Year</th>
            <th>Origin Country</th>
            <th>Price (Euros)</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
            
        <% articles.forEach(function(article){ %>
<tr>
    <td><%=article.id %></td>
    <td><strong><%=article.title %></strong></td>
    <td><i><%=article.description %></i></td>
    <td><i><%=article.manifacturer %></i></td>
    <td><i><%=article.foundingYear %></i></td>
    <td><i><%=article.originCountry %></i></td>
    <td><i><%=article.price %></i></td>
    <td>
       
        <a href="/articles/edit/<%= article.id %>" class="btn btn-secondary">Edit</a>
        <form class="d-inline" action="/articles/delete/<%= article.id %>" method="post">
            <input type="hidden" name="_csrf" value="<%= _csrf %>" />
            <input type="submit" value="Delete" class="btn btn-danger">
        </form>
    </td>
</tr>
        <%}) %>
    </tbody>
</table>