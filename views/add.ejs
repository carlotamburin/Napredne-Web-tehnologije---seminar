<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/articles/list">Pizzas</a></li>
    <li class="breadcrumb-item active">Add</li>
</ol>

<h1 class="display-4">Add Pizza</h1>
<form method="post" action="/articles/create">
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />

    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control">
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="manifacturer">Manifacturer</label>
        <input type="text" name="manifacturer" class="form-control">
    </div>

    <div class="form-group">
        <label for="foundingYear">Founding Year</label>
        <input type="number" name="foundingYear" class="form-control">
    </div>

    <div class="form-group">
        <label for="originCountry">Origin Country</label>
        <input type="text" name="originCountry" class="form-control">
    </div>

    <div class="form-group">
        <label for="price">Price (Euros)</label>
        <input type="number" name="price" class="form-control">
    </div>


    <input type="submit" value="Submit" class="btn btn-primary">

</form>